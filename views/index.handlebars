<div id="home">
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Dad Jokes!</a>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-4 list-container">
                <div class="card">
                    <ul class="list-group"></ul>
                </div>
            </div>
            <div class="col-6">
                <div class="card">
                    <h4 id="joke" class="joke">this is where the jokes go</h4>
                </div>
                <br>
                <div class="card">
                    <h4 id="punchline" class="punchline"></h4>
                </div>
                <br>
                <button type="button" id="punchlineBtn" class="btn btn-primary punchlineBtn">What's the
                    punchline?</button>
                <br>
                <div class="row">
                    <div class="col-sm">
                        <div id="current-ratings" class="card current-ratings">Ratings box</div>
                    </div>

                    <div class="col-sm">
                        <div class="input-group">
                            <select class="custom-select" id="your-rating"
                                aria-label="Example select with button addon">
                                <option selected>Rate this Joke!</option>
                                <option value="1">One Star</option>
                                <option value="2">Two Stars</option>
                                <option value="3">Three Stars</option>
                                <option value="4">Four Stars</option>
                                <option value="5">Five Stars</option>
                            </select>
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="ratingBtn">Submit</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <h4>Think you can do better?</h4>
                    </div>
                    <button type="button" id="submit" class="btn btn-primary submit">Add a Joke!</button>
                </div>
            </div>

        </div>
    </div>